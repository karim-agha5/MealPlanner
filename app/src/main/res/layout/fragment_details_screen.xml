<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/favFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="20dp"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_title_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:shadowColor="#A5ACAC"
                android:shadowDx="10"
                android:shadowDy="10"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:shadowRadius="15"
                android:text="Meal title"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_meal_details"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contentDescription="@string/app_name"
                android:elevation="2sp"
                android:scaleType="fitXY"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Instructions"
                    android:textStyle="bold"
                    android:shadowColor="#A5ACAC"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:textColor="#000"
                    android:textSize="25sp" />
                <TextView
                    android:id="@+id/tv_instructions_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Instructions"
                    android:textColor="#000"
                    android:textSize="18sp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginEnd="20dp"
                    android:text="Category"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteY="316dp" />

                <TextView
                    android:id="@+id/tv_meal_category_details"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginEnd="20dp"
                    android:hint="Category"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteY="316dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="49dp"
                    android:layout_marginEnd="20dp"
                    android:text="Area"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_area_details"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="49dp"
                    android:layout_marginEnd="20dp"
                    android:hint=" area"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="8"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgButtonFav"
                    android:layout_width="60dp"
                    android:layout_weight="4"
                    android:layout_height="49dp"
                    android:backgroundTint="@color/white"
                    android:contentDescription="FavouriteButton"
                    app:srcCompat="@android:drawable/star_on"
                    tools:layout_editor_absoluteY="316dp" />


                <Button
                    android:id="@+id/btn_Plan"
                    android:layout_width="100dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Add to Plan"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/teal_700"
                    android:layout_marginBottom="50dp"/>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>
